<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YAMiMAUI.Kategoriler.Sepetim"
             Title="Sepetim"
             BackgroundImageSource="logo_arkaplan.png">
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="10">
                <CollectionView x:Name="SepetCollectionView"
                                ItemsSource="{Binding SepetItems}"  SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="5" Padding="10" CornerRadius="10" BackgroundColor="White">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding UrunAdi}"
                                           FontSize="Medium"
                                           FontAttributes="Bold" />
                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding UrunAdet, StringFormat='Adet: {0}'}"
                                           FontSize="Small" />

                                    <Label Grid.Row="2" Grid.Column="0"
                                           Text="{Binding Tutar, StringFormat='Tutar: {0:C}'}"
                                           FontSize="Small" />

                                    <Button Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                                            Text="Kaldır"
                                            BackgroundColor="#dc3545"
                                            TextColor="White"
                                            CornerRadius="5"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.KaldirCommand}"
                                            CommandParameter="{Binding SepetId}" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Grid Padding="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Text="{Binding ToplamTutar, StringFormat='Toplam Tutar: {0:C}'}"
                           FontSize="Large"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                    <Button Grid.Column="1"
                            Text="Sepeti Temizle"
                            BackgroundColor="#dc3545"
                            TextColor="White"
                            CornerRadius="5"
                            Margin="10,0,0,0"
                            Command="{Binding SepetiTemizleCommand}" />
                </Grid>

                <Frame BackgroundColor="White" Padding="10" CornerRadius="10">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Ödeme Yöntemi:" FontSize="Medium" FontAttributes="Bold" />
                        <FlexLayout JustifyContent="SpaceAround">
                            <RadioButton Content="Kredi Kartı" GroupName="PaymentMethod"
                                      IsChecked="{Binding IsKrediKartiSelected}" />
                            <RadioButton Content="Nakit Ödeme" GroupName="PaymentMethod"
                                      IsChecked="{Binding IsNakitSelected}" />
                        </FlexLayout>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="White" Padding="10" CornerRadius="10">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Teslimat Tarihi ve Saati:" FontSize="Medium" FontAttributes="Bold" />
                        <DatePicker Date="{Binding SelectedDate}" Format="dd/MM/yyyy" />
                        <TimePicker Time="{Binding SelectedTime}" Format="HH:mm" />
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="White" Padding="10" CornerRadius="10">
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <CheckBox IsChecked="{Binding IsTermsAccepted}" />
                        <Label TextColor="Blue" TextDecorations="Underline" VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Kullanım ve iade koşullarını okudum ve kabul ediyorum." />
                                </FormattedString>
                            </Label.FormattedText>
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ShowTermsCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <Button Grid.Row="1"
                Text="Ödemeyi Tamamla"
                BackgroundColor="#28a745"
                TextColor="White"
                CornerRadius="10"
                Margin="10"
                Command="{Binding OdemeyiTamamlaCommand}" />
    </Grid>
</ContentPage>