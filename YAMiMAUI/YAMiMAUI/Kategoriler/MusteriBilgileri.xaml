<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YAMiMAUI.Kategoriler.MusteriBilgileri"
             Title="Müşteri Bilgileri">

    <Grid>
        <!-- Arka plan resmi -->
        <Image Source="logo_arkaplan.png"
               Aspect="Fill"
               Grid.RowSpan="2" />

        <!-- Verilerin gösterildiği CollectionView -->
        <CollectionView x:Name="MusteriCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Padding="10" BorderColor="Gray" CornerRadius="10" BackgroundColor="White" Opacity="0.8">
                        <StackLayout Spacing="5">
                            <Label Text="{Binding MAdSoyad}" FontAttributes="Bold" FontSize="18" TextColor="Black"/>

                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Kullanıcı adı: " FontAttributes="Bold"/>
                                        <Span Text="{Binding MKullaniciAdi}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Email: " FontAttributes="Bold"/>
                                        <Span Text="{Binding MEmail}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Tel No: " FontAttributes="Bold"/>
                                        <Span Text="{Binding MTelNo}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Adres: " FontAttributes="Bold"/>
                                        <Span Text="{Binding MAdres}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label FontSize="14" TextColor="Gray">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="ID: " FontAttributes="Bold"/>
                                        <Span Text="{Binding MusteriId}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>